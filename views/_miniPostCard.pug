mixin miniPostCard(post,index)
    .miniPostCard(class= `item-${index+2}`)
        .card__picture 
            //- img.card__picture-img(src=`/img/posts/${post.imageCover}`, alt=`${post.title}`)
            img.card__picture-img(src=`/img/posts/tour-1-3.jpg`, alt=`${post.title}`)
        .card__content
            a.text-decoration-none(href=`/post/${post.slug}`)
                .card__title= post.title
            .card__footer 
                p Thet Htet Soe
                span= post.createdAt.toLocaleString('en-us', { year: "numeric", month: "2-digit", day: "numeric"})
