extends adminbase

block content
   main.main
      .container--table  
        table.table
            tr 
                th.hideOnMobileAdmin Photo
                th.title Title 
                th.hideOnMobileAdmin Author
                th edit
                th delete
            each post in posts
                tr 
                    td.hideOnMobileAdmin   
                      img(src=`/img/posts/${post.imageCover}`, width="88", height="78" , alt=`${post.title}`)
                    td.title= post.title
                    td.hideOnMobileAdmin= post.author.name
                    td 
                      a.edit(href=`/admin/post/${post._id}`)
                        button.btn--round.btn--green 
                          svg(width="24px", height="24px")
                            use(xlink:href="/img/icons.svg#icon-edit")
                    td 
                      button.btnDelete--post.btn--round.btn--red(data-post_id=post._id)
                        svg(width="24px", height="24px")
                          use(xlink:href="/img/icons.svg#icon-delete")

      .pagination-section
        .previous
          a(href=`/admin/posts?page=${currentPage *1 -1}&limit=3`)
            button.btn.btn--white
              svg(width="32px", height="32px")
                use(xlink:href="/img/icons.svg#icon-chevron-left")  
        .next
          a(href=`/admin/posts?page=${currentPage *1 +1}&limit=3`)          
            button.btn.btn--white
              svg(width="32px", height="32px")
                use(xlink:href="/img/icons.svg#icon-chevron-right") 
    
       
       
       
       
       
       
       
       
       
       
